<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="JPACMMS">
	
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider
    </provider>

<!-- entities -->

		<class>com.skilldistillery.cmms.entities.User</class>
		<class>com.skilldistillery.cmms.entities.Staff</class>
		<class>com.skilldistillery.cmms.entities.Training</class>
		<class>com.skilldistillery.cmms.entities.Frequency</class>
		<class>com.skilldistillery.cmms.entities.Certification</class>
		<class>com.skilldistillery.cmms.entities.CardHasCertification</class>
		<class>com.skilldistillery.cmms.entities.CertificationHasStaff</class>
		<class>com.skilldistillery.cmms.entities.Location</class>
		<class>com.skilldistillery.cmms.entities.MaintenanceRequirementCard</class>
		<class>com.skilldistillery.cmms.entities.MaintenanceItem</class>
		<class>com.skilldistillery.cmms.entities.CardHasTool</class>
		<class>com.skilldistillery.cmms.entities.CardHasPart</class>
		<class>com.skilldistillery.cmms.entities.CardHasSafety</class>
		<class>com.skilldistillery.cmms.entities.EquipmentType</class>
		<class>com.skilldistillery.cmms.entities.Tool</class>
		<class>com.skilldistillery.cmms.entities.Part</class>
		<class>com.skilldistillery.cmms.entities.Equipment</class>

<!-- /entities -->

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/cmmsdb?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
			<property name="javax.persistence.jdbc.user" value="cmmsadmin" />
			<property name="javax.persistence.jdbc.password"
				value="cmmsadmin" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.timeout" value="60" />
		</properties>
	
	
	</persistence-unit>
</persistence>
